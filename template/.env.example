# Core identifiers
CONTAINER_NAME=rapp-name-placeholder

# IAM (Identity and Access Management)
IAM_CLIENT_ID=your-iam-client-id
IAM_CLIENT_SECRET=your-iam-client-secret
IAM_BASE_URL=https://iam.example.com

# Certificates
CA_CERT_FILE_NAME=ca-cert.pem
CA_CERT_FILE_PATH=/etc/certs/
APP_KEY=/etc/certs/app-key.pem
APP_CERT=/etc/certs/app-cert.pem
APP_CERT_FILE_PATH=/etc/certs/

# Logging
LOG_CTRL_FILE=/etc/log/logcontrol.json
LOG_ENDPOINT=https://log-collector.example.com

# Kafka certificates
KAFKA_CERT_MOUNT_PATH=/etc/kafka/certs/
KAFKA_CERT_FILE_NAME=kafka-client.pem

# Retry configuration
MAX_RETRIES=5
RETRY_DELAY=5

# Consumer tuning
CONSUMER_MESSAGE_BATCH_SIZE=1000
CONSUMER_TIMEOUT=1.0